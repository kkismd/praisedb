@startuml
!include skinparam.puml
hide circle

entity homes {
    ホームテーブル
    --
    + id INTEGER [PK]
    ~ name VARCHAR(255) [unique]
    status INTEGER
}

entity users {
    ユーザーテーブル
    --
    + id INTEGER [PK]
    * home_id INTEGER [FK]
    ~ name VARCHAR(255) [unique]
    password_digest VARCHAR(255)
    status INTEGER
    created_at TIMESTAMP
    updated_at TIMESTAMP
}

entity messages {
    メッセージレジュメテーブル
    --
    + id INTEGER [PK]
    * home_id INTEGER [FK]
}

entity songs {
    歌詞テーブル
    --
    + id INTEGER [PK]
    * home_id INTEGER [FK]
}

homes -{ users
homes -d-{ messages
homes -d-{ songs

@enduml